CREATE TABLE users (
    id SERIAL PRIMARY KEY,
    name VARCHAR(255),
    login VARCHAR(255),
    password VARCHAR(255),
    created_at TIMESTAMP,
    modified_at TIMESTAMP
);
CREATE TABLE roles (
    id SERIAL PRIMARY KEY,
    name VARCHAR(255)
);
CREATE TABLE user_roles (
    user_id INT REFERENCES users(id),
    role_id INT REFERENCES roles(id),
    PRIMARY KEY (user_id, role_id)
);
